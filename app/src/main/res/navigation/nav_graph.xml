<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/SplashFragment">

    <fragment
        android:id="@+id/SplashFragment"
        android:name="com.netguru.randomcityapp.presentation.splash.fragments.SplashFragment"
        tools:layout="@layout/fragment_splash">

        <action
            android:id="@+id/action_SplashFragment_to_ListFragment"
            app:destination="@id/ListFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/ListFragment"
        android:name="com.netguru.randomcityapp.presentation.list.ListFragment"
        tools:layout="@layout/fragment_list">

        <action
            android:id="@+id/action_ListFragment_to_DetailsFragment"
            app:destination="@id/DetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/DetailsFragment"
        android:name="com.netguru.randomcityapp.presentation.details.DetailsFragment"
        tools:layout="@layout/fragment_details">

        <action
            android:id="@+id/action_DetailsFragment_to_FirstFragment"
            app:destination="@id/ListFragment" />
    </fragment>
</navigation>